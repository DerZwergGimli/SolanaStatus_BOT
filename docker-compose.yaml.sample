version: "3"
services:
  utcbot:
    build:
      context: .
      dockerfile: Dockerfile
    image: sol_status_bot
    environment:
      RUST_LOG: info
      DISCORD_TOKEN: "<DISCORD_TOKEN>"
      SLOOP_SLEEP: 60
      UPDATE_NAME: "true"
      USER_ID: "<BOT_USER_ID>"

    restart: unless-stopped
    volumes:
      - /etc/localtime:/etc/localtime:ro